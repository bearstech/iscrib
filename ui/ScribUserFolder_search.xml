<?xml version="1.0" encoding="UTF-8"?>
<stl:block xmlns:stl="http://xml.itools.org/namespaces/stl" xmlns="http://www.w3.org/1999/xhtml">

<form method="get" action=";search_form">
  <table class="form">
    <tr>
      <th class="title" colspan="2">Search</th>
    </tr>
    <tr>
      <td class="title" colspan="2">
        <stl:block repeat="bib bib_types">
          <stl:block if="bib/checked">
            <b>${bib/name}</b>
            <input name="search_bib" type="radio" value="${bib/value}" onchange="updateSearchField(this.value)" checked="checked"/>
          </stl:block>
          <stl:block if="not bib/checked">
            <b>${bib/name}</b>
            <input name="search_bib" type="radio" value="${bib/value}" onchange="updateSearchField(this.value)"/>
          </stl:block>
        </stl:block>
      </td>
    </tr>
    <tr>
      <th>Nom de la ville, pour une BM
          <br/>(exemple "saint")</th>
      <td>
        <stl:block if="is_BM">
          <input name="search_name" id="search_name" size="30" type="text" value="${search_name}"/>
        </stl:block>
        <stl:block if="not is_BM">
          <input style="background: #eee" value="${search_name}" name="search_name" size="30" disabled="disabled" id="search_name" type="text"/>
        </stl:block>
      </td>
    </tr>
    <tr>
      <th>Departement (exemple : 02)<br/>
      </th>
      <td>
        <select name="search_dep" id="search_dep">
          <option stl:repeat="dep departements" value="${dep/value}" selected="${dep/selected}">${dep/name}</option>
        </select>
      </td>
    </tr>
    <tr>
      <th>Annee (exemple : 2004)</th>
      <td>
        <input name="search_year" size="4" type="text" value="${search_year}"/>
      </td>
    </tr>
    <tr>
      <th></th>
      <td class="submit"><input type="submit" value="Search"/></td>
    </tr>
  </table>
</form>

Adninistrateurs :
<ul>
  <stl:block repeat="user admins">
    <li><a href="${user/url}">${user/name}</a></li>
  </stl:block>
</ul>

<hr/>

<table class="form">
  <tr stl:if="not table/objects">
    <td colspan="4">
      <em>No objects found.</em>
    </td>
    <td></td>
    <td></td>
  </tr>
  <tr stl:if="too_long_answer">
    <td colspan="4">
      <em>${too_long_answer}</em>
    </td>
    <td></td>
    <td></td>
  </tr>
  <div class="batchcontrol" stl:if="batch/total">
    <stl:inline if="batch/control">${batch/control}</stl:inline>
    <a stl:if="batch/previous" href="${batch/previous}">&lt;&lt;</a>
    <a stl:if="batch/next" href="${batch/next}">>></a>
  </div>
  <stl:block if="table/objects">
    <tr>
      <th></th>
      <th style="border-bottom: 1px dotted black; text-align: center">
        Name <stl:inline>${table/sortcontrol(oid)}</stl:inline>
      </th>
      <th align="left" style="border-bottom: 1px dotted black; text-align: center">
        Ville/Departement <stl:inline>${table/sortcontrol(title)}</stl:inline>
      </th>
    </tr>
    <tr stl:repeat="object table/objects">
      <td>
        <img alt="${object/type}" border="0" src="${object/icon}"/>
      </td>
      <td>
        <stl:block repeat="x object/path">
          <a href="${x/url}">${x/name}</a>
          <stl:inline if="not repeat/x/end">/</stl:inline>
        </stl:block>
      </td>
      <td>${object/title}</td>
    </tr>
  </stl:block>
</table>

</stl:block>
