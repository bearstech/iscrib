<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<stl:block xmlns="http://www.w3.org/1999/xhtml"
  xmlns:stl="http://www.hforge.org/xml-namespaces/stl">

  <p stl:if="not skip_print">
    <stl:inline stl:repeat="item menu"><a
        href="${item/href}" class="${item/active}">${item/title}</a>&nbsp;|
    </stl:inline>
  </p>

  <form method="post" action=";page${page_number}">
    <input type="hidden" name="page_number" value="${page_number}" />
    <!-- XXX BM -->
    <input type="hidden" name="A100" value="${code_ua}" />
    <!-- XXX BDP -->
    <input type="hidden" name="0" value="${code_ua}" />

    <stl:block stl:if="not skip_print">
      <p id="form-firsttime" stl:if="first_time">
        <a href="/;aide">Veuillez consulter l'aide générale.</a>
      </p>
      <p id="form-toolbar">
        <a id="form-help" href="${help_onclick}"
          title="Aide (dans une nouvelle fenêtre)"
          onclick="return popup(this.href, 440, 540)">Aide sur cette page</a>
        <input id="form-submit" type="submit" value="Enregistrer"
          stl:if="not readonly" class="button-ok"/>
        <a id="form-print" href="?view=printable" title="Imprimer (dans une
          nouvelle fenêtre)" onclick="return popup(this.href, 800,
          600)">Imprimer cette page</a>
      </p>
      <hr class="clear" />
    </stl:block>

    <div id="form-tables">
      <table class="scrib-table" stl:repeat="table tables">
        <tr stl:repeat="row table">
          <td stl:repeat="column row" rowspan="${column/rowspan}"
            colspan="${column/colspan}"
            class="${column/class}">${column/body}</td>
        </tr>
      </table>
      <p>
        <input type="submit" value="Enregistrer" stl:if="not readonly"
          class="button-ok"/>
      </p>
    </div>

  </form>

  <script type="text/javascript">
    //<!--
    fragment = window.location.hash;
    if (fragment.substr(0, 7) == "#field_") {
      id = fragment.substr(0, 11);
      $(id).addClass('badtype');
    }
    //-->
  </script>

</stl:block>
