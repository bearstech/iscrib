<?xml version="1.0" encoding="UTF-8"?>
<stl:block xmlns:stl="http://xml.itools.org/namespaces/stl" xmlns="http://www.w3.org/1999/xhtml">

<div class="batchcontrol" stl:if="batch/total">
  <stl:inline if="batch/control">${batch/control}</stl:inline>
  <a stl:if="batch/previous" href="${batch/previous}">&lt;&lt;</a>
  <a stl:if="batch/next" href="${batch/next}">>></a>
</div>

<form method="post" action=".">
  <table class="form">
    <tr stl:if="not table/objects">
      <td></td>
      <td></td>
      <td colspan="4">
        <em>This folder is empty.</em>
      </td>
    </tr>

    <stl:block if="table/objects">
      <tr class="header">
        <th></th>
        <th></th>
        <th>
          Title <stl:inline>${table/sortcontrol(title)}</stl:inline>
        </th>
        <th>Type</th>
        <th>
          Date <stl:inline>${table/sortcontrol(mtime)}</stl:inline>
        </th>
        <th>Size</th>
      </tr>
      <tr stl:repeat="object table/objects">
        <td>
          <input name="ids" stl:if="object/checkbox" type="checkbox" class="checkbox" value="${object/name}"/>
        </td>
        <td>
          <a href="${object/url}">
            <img title="${object/format}" border="0" src="${object/icon}"/>
          </a>
        </td>
        <td>
          <a href="${object/url}">${object/title}</a>
        </td>
        <td nowrap="physical">${object/format}</td>
        <td nowrap="physical">${object/mtime}</td>
        <td nowrap="physical">${object/size}</td>
      </tr>
    </stl:block>
    <tr>
      <td></td>
      <td class="submit" colspan="7">
        <stl:block if="table/objects">
          <input name=";remove" type="submit" value="Remove" onClick="return confirmation();"/>
          <input name=";rename_form" type="submit" value="Rename.."/>
        </stl:block>
      </td>
    </tr>
    <tr>
      <td><img width="10" height="1" src=";px"/></td>
      <td><img width="16" height="1" src=";px"/></td>
      <td><img width="133" height="1" src=";px"/></td>
      <td><img width="70" height="1" src=";px"/></td>
      <td><img width="90" height="1" src=";px"/></td>
      <td><img width="40" height="1" src=";px"/></td>
    </tr>
  </table>
</form>


</stl:block>
